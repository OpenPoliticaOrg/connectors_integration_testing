# ==========================================
# Production Environment Variables
# ==========================================
# Copy this file to .env.prod and fill in the values
# NEVER commit .env files to version control

# ==========================================
# Domain Configuration
# ==========================================
DOMAIN=dev.fairquanta.com
ACME_EMAIL=admin@fairquanta.com

# ==========================================
# Database Configuration
# ==========================================
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_secure-db-password
DB_NAME=connectors

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=CHANGE_ME_secure-redis-password

# ==========================================
# Auth Service Secrets
# ==========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=CHANGE_ME_min-32-char-better-auth-secret
JWT_SECRET=CHANGE_ME_different-from-better-auth-secret

# ==========================================
# Encryption Key for OAuth Tokens
# ==========================================
# Must be exactly 32 characters
ENCRYPTION_KEY=CHANGE_ME_32-char-encryption!

# ==========================================
# OAuth Providers
# ==========================================

# GitHub OAuth (for user login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (for user login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub App (for repository access)
GITHUB_APP_NAME=
GITHUB_WEBHOOK_SECRET=

# Linear OAuth
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=
# Linear redirect will be auto-generated as https://${DOMAIN}/oauth/linear/callback

# Slack
SLACK_SIGNING_SECRET=

# ==========================================
# Email Configuration (Resend)
# ==========================================
RESEND_API_KEY=
FROM_EMAIL=noreply@fairquanta.com

# ==========================================
# AI Configuration
# ==========================================
ANTHROPIC_API_KEY=

# ==========================================
# MCP Server URLs (optional)
# ==========================================
GITHUB_MCP_URL=
LINEAR_MCP_URL=
