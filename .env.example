# Development Environment Variables
# Copy to .env and fill in your values
#
# NOTE: HTTPS is used locally to match production behavior
# OAuth webhooks require HTTPS - test them locally!

# ==========================================
# Database & Redis (in Docker)
# ==========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/connectors_dev
REDIS_URL=redis://localhost:6379

# ==========================================
# Auth Service
# ==========================================
BETTER_AUTH_SECRET=your-dev-secret-min-32-characters-long-change-in-prod
BETTER_AUTH_URL=https://localhost
JWT_SECRET=your-dev-jwt-secret-different-from-auth-secret
CORS_ORIGINS=https://localhost,https://localhost:3000,http://localhost:3000

# OAuth Providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (optional)
RESEND_API_KEY=
FROM_EMAIL=

# ==========================================
# Connectors Service
# ==========================================
AUTH_JWKS_URL=http://auth:5001/api/auth/jwks
AUTH_ISSUER=https://localhost
AUTH_AUDIENCE=https://localhost
ENCRYPTION_KEY=dev-encryption-key-32-characters

# OAuth (redirect URIs must use https://localhost)
LINEAR_CLIENT_ID=
LINEAR_CLIENT_SECRET=
LINEAR_REDIRECT_URI=https://localhost/oauth/linear/callback
GITHUB_APP_NAME=
GITHUB_WEBHOOK_SECRET=

# Webhooks
SLACK_SIGNING_SECRET=

# AI
ANTHROPIC_API_KEY=

# MCP Servers
GITHUB_MCP_URL=
LINEAR_MCP_URL=
