# =============================================================================
# Coordination Intelligence Platform - PRODUCTION Environment Variables
# =============================================================================
# This file is for PRODUCTION deployment only
# Copy to .env and fill in production values
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Coordination Intelligence Platform"
DEBUG=false

# Generate a strong secret key (32+ bytes)
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-production-secret-key

# -----------------------------------------------------------------------------
# REQUIRED: Slack OAuth Credentials
# -----------------------------------------------------------------------------
# From: https://api.slack.com/apps > Your App > Basic Information
SLACK_CLIENT_ID=your-production-client-id
SLACK_CLIENT_SECRET=your-production-client-secret
SLACK_SIGNING_SECRET=your-production-signing-secret

# Bot token (generated after first install, for API calls)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# -----------------------------------------------------------------------------
# REQUIRED: Production URLs
# -----------------------------------------------------------------------------
# Your production domain (HTTPS required by Slack)
PUBLIC_URL=https://your-production-domain.com

# Allowed OAuth redirect URLs (must include production URL)
# SECURITY: Only these exact URLs are allowed
ALLOWED_REDIRECT_URLS=https://your-production-domain.com/oauth/callback

# -----------------------------------------------------------------------------
# REQUIRED: AI Provider API Key
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-production-openai-key

# -----------------------------------------------------------------------------
# REQUIRED: Database (PostgreSQL recommended for production)
# -----------------------------------------------------------------------------
# Use PostgreSQL in production
# Example with Railway/Render/Supabase:
# DATABASE_URL=postgresql://user:password@host:5432/coordination
DATABASE_URL=postgresql://user:password@localhost:5432/coordination
DATABASE_TYPE=postgres

# -----------------------------------------------------------------------------
# OPTIONAL: Redis (recommended for caching in production)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://username:password@your-redis-host:6379

# -----------------------------------------------------------------------------
# OPTIONAL: Ngrok (not needed in production)
# -----------------------------------------------------------------------------
# Leave empty in production - only for local development
NGROK_AUTHTOKEN=
NGROK_DOMAIN=

# -----------------------------------------------------------------------------
# REQUIRED: Security
# -----------------------------------------------------------------------------
# Generate encryption key for sensitive data
# python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-32-byte-production-encryption-key

# -----------------------------------------------------------------------------
# REQUIRED: Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=WARNING

# -----------------------------------------------------------------------------
# OPTIONAL: Sentry/Datadog for error tracking
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key

# -----------------------------------------------------------------------------
# OPTIONAL: Stripe for payments (if charging for app)
# -----------------------------------------------------------------------------
# STRIPE_SECRET_KEY=sk_live_your_stripe_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# NOTES FOR PRODUCTION:
# -----------------------------------------------------------------------------
# 1. Never commit this file with real values to git
# 2. Use a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
# 3. Enable distribution in Slack app settings
# 4. Add your production domain to Slack OAuth redirect URLs
# 5. Set up monitoring and alerting
# 6. Use HTTPS only (Slack requires this)
# 7. Regular security audits recommended
# =============================================================================
